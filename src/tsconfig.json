{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "outDir": "../dist",
    "types": ["@types/node"],
    "noImplicitAny": false,
  },
  "include": ["."],
	"exclude": ["**/node_modules"],
}
